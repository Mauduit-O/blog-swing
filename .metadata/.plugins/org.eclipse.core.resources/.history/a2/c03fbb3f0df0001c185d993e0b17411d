				UserDao usDao = new UserDao();
				
			//	usDao.verifLogin(email_saisie, pwd_saisie);
				
				if(usDao.verifLogin(email_saisie, pwd_saisie)) {
					
					JOptionPane.showMessageDialog(null, "FÃ©licitation");
					panel_connection.removeAll();
					Post post = new Post();
